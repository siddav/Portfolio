<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nanodegree_apps"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/spotifyStreamerButton"
        style="@style/buttonStyle"
        android:text="@string/spotify_streamer"
        android:background="@color/colorOrange"/>
    <Button
        android:id="@+id/scoresAppButton"
        style="@style/buttonStyle"
        android:text="@string/scores_app"
        android:background="@color/colorOrange"/>
    <Button
        android:id="@+id/libraryAppButton"
        style="@style/buttonStyle"
        android:text="@string/library_app"
        android:background="@color/colorOrange"/>
    <Button
        android:id="@+id/buildItBiggerButton"
        style="@style/buttonStyle"
        android:text="@string/build_it_bigger"
        android:background="@color/colorOrange"/>
    <Button
        android:id="@+id/xyzButton"
        style="@style/buttonStyle"
        android:text="@string/xyz_reader"
        android:background="@color/colorOrange"/>
    <Button
        android:id="@+id/capstoneButton"
        android:text="@string/capstone_app"
        style="@style/buttonStyle"
        android:background="@color/colorPink"/>
    </LinearLayout>
</ScrollView>


